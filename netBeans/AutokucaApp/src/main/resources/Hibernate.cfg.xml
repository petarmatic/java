<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC 
  "-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
  "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- https://www.theserverside.com/blog/Coffee-Talk-Java-News-Stories-and-Opinions/An-example-hibernatecfgxml-for-MySQL-8-and-Hibernate-5 -->
<hibernate-configuration>
  <session-factory>
    <property name="connection.driver_class">org.mariadb.jdbc.Driver</property>
   
    <property name="connection.url">jdbc:mariadb://localhost/autokuca_importhib</property>
    <property name="dialect">org.hibernate.dialect.MariaDBDialect</property>
    <property name="connection.username">root</property>
    <property name="connection.password"></property>
    <property name="connection.pool_size">3</property>
    <property name="current_session_context_class">thread</property>
    <property name="show_sql">true</property>
    <property name="format_sql">true</property>
    <property name="hbm2ddl.auto">update</property>
    
    <mapping class="autokuca.model.Kupac" />
    <mapping class="autokuca.model.ProdajnoMjesto" />
    <mapping class="autokuca.model.Prodavac" />
    <mapping class="autokuca.model.Racun" />
    <mapping class="autokuca.model.Vozilo" />
    <mapping class="autokuca.model.Operater" />
    
       
  </session-factory>
</hibernate-configuration>